        <ComboBox x:Name="ComboBox" HorizontalAlignment="Left" Height="55" Margin="0,56,0,0" VerticalAlignment="Top" Width="628" SelectionChanged="ComboBox_SelectionChanged"/>
        <Button x:Name="Clear" Content="Очистить" HorizontalAlignment="Left" Height="54" Margin="628,57,0,0" VerticalAlignment="Top" Width="172" FontSize="22" Click="Clear_Click"/>
    </Grid>
</Page>
