<Page x:Class="Praktika1.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktika1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <DataGrid x:Name="OrdersDataGrid" Background="#FF887DDA" Margin="0,111,0,0"/>
        <Button Content="Назад" Margin="310,417,0,0" FontSize="22" Click="Back_Click3" Height="33" VerticalAlignment="Top" HorizontalAlignment="Left" Width="180"/>
        <TextBox x:Name="Search_window" HorizontalAlignment="Left" Height="56" TextWrapping="Wrap" VerticalAlignment="Top" Width="628" FontSize="22"/>
